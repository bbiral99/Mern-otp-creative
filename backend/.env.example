# Database Configuration
MONGODB_URI=mongodb://localhost:27017/otpmernproject
DB_NAME=otpmernproject

# Server Configuration
PORT=5000
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=7d

# OTP Configuration
OTP_LENGTH=6
OTP_EXPIRES_MINUTES=5
OTP_MAX_ATTEMPTS=5

# Email Configuration - SendGrid (Recommended for Production)
SENDGRID_API_KEY=your_sendgrid_api_key_here

# Email Configuration - SMTP Fallback (Gmail)
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password_here

# Email Mode (for cloud deployments where SMTP might be blocked)
# Set to 'console' to force console-only mode
# Set to 'smtp' to force SMTP mode
# Leave empty for auto-detection
EMAIL_MODE=

# Alternative Email Configuration (Yahoo)
# EMAIL_SERVICE=yahoo
# EMAIL_HOST=smtp.mail.yahoo.com
# EMAIL_PORT=587
# EMAIL_USER=your_email@yahoo.com
# EMAIL_PASS=your_yahoo_app_password_here

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000
CLIENT_URL=http://localhost:3000

# Security
BCRYPT_ROUNDS=10