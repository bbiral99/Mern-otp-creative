# Database Configuration
MONGODB_URI=mongodb://localhost:27017/otpmernproject
DB_NAME=otpmernproject

# Server Configuration
PORT=5000
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=7d

# OTP Configuration
OTP_LENGTH=6
OTP_EXPIRES_MINUTES=5
OTP_MAX_ATTEMPTS=5

# Email Configuration - Gmail SMTP (Primary for Vercel)
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_gmail_app_password_here

# Email Configuration - SendGrid (Fallback)
SENDGRID_API_KEY=your_sendgrid_api_key_here

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000
CLIENT_URL=http://localhost:3000

# Security
BCRYPT_ROUNDS=10

# Vercel Deployment Notes:
# 1. Get Gmail App Password: Google Account → Security → 2-Step Verification → App passwords
# 2. Set EMAIL_USER and EMAIL_PASS in Vercel environment variables
# 3. Optional: Set SENDGRID_API_KEY as fallback
# 4. Set MONGODB_URI to your cloud MongoDB connection string
# 5. Set CLIENT_URL to your deployed frontend URL